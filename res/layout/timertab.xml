<?xml version="1.0" encoding="utf-8"?>

<!-- Main Layout of Status Activity -->
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout android:orientation="vertical" android:layout_width="fill_parent"  android:layout_height="wrap_content">

<!-- Cooking Guide Start  -->
<Button android:text="Switch to Meal Planner" android:id="@+id/TimerTypeToggle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textSize="25sp" android:layout_marginBottom="10dip"/>


<TextView android:layout_height="wrap_content" android:text="Dish 1- Click Here To Set Title" android:id="@+id/MP1Title" android:textColor="#000000" android:layout_width="fill_parent" android:gravity="center" android:textSize="20sp" android:visibility="gone" android:background="@drawable/yellowtile" android:textStyle="bold" android:layout_marginBottom="5dip"/>

<!-- Timer 1  -->
<LinearLayout android:orientation="horizontal" android:id="@+id/Timer1MainLayout" android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_marginBottom="10dip" android:layout_height="wrap_content" android:background="@drawable/greenoutlinelarge">
    <TextView android:layout_height="wrap_content" android:text="00:00:00" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/CurrentTime1"  android:textSize="75sp"/>
</LinearLayout>

<!-- Buttons Line 1 -->
<LinearLayout android:orientation="horizontal" android:id="@+id/Timer1ButtonLine" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginBottom="15dip">	
	<Button android:text="   Start   " android:id="@+id/TimerStartButton" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/> 
	<Button android:text="   Stop   " android:id="@+id/TimerStopButton" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dip" android:layout_marginLeft="25dip"/> 
	<Button android:text="   Reset   " android:id="@+id/TimerResetButton" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>

<!--  Meal Planner Line 1 -->
<LinearLayout android:orientation="vertical" android:id="@+id/Timer1PlannerLine" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:visibility="gone">	
    <TextView android:layout_height="wrap_content" android:text="Preparation Time                 Cooldown Time" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/CurrentTime1"  android:textSize="10sp"/>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content">	
		<Button android:text="  00:00:00  " android:id="@+id/Timer1PrepTime" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_marginRight="25dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/> 
		<Button android:text="  00:00:00   " android:id="@+id/Timer1CooldownTime" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>


<TextView android:layout_height="wrap_content" android:text="Dish 2- Click Here To Set Title" android:id="@+id/MP2Title" android:textColor="#000000" android:layout_marginTop="15dip" android:layout_width="fill_parent" android:gravity="center" android:textSize="20sp" android:visibility="gone" android:background="@drawable/yellowtile" android:textStyle="bold" android:layout_marginBottom="5dip"/>

<!-- Timer 2  -->
