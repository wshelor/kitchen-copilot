<LinearLayout android:orientation="horizontal"  android:layout_width="fill_parent" android:gravity="center_horizontal" android:id="@+id/Timer3ButtonLine" android:layout_height="wrap_content" android:layout_marginBottom="15dip">
	<Button android:text="   Start   " android:id="@+id/TimerStartButton3"  android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<Button android:text="   Stop   " android:id="@+id/TimerStopButton3" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dip" android:layout_marginLeft="25dip"/>
	<Button android:text="   Reset   " android:id="@+id/TimerResetButton3"  android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content"  android:layout_height="wrap_content"/>
