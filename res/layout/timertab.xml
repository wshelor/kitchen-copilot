	</LinearLayout>
</LinearLayout>

<TextView android:layout_height="wrap_content" android:text="Dish 4- Click Here To Set Title" android:id="@+id/MP4Title" android:textColor="#000000" android:layout_marginTop="15dip" android:layout_width="fill_parent" android:gravity="center" android:textSize="20sp" android:visibility="gone" android:background="@drawable/yellowtile" android:textStyle="bold" android:layout_marginBottom="5dip"/>

<!-- Timer 4  -->
<LinearLayout android:orientation="horizontal" android:id="@+id/Timer4MainLayout" android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_marginBottom="10dip" android:layout_height="wrap_content" android:background="@drawable/greenoutlinelarge" android:visibility="gone">
    <TextView android:layout_height="wrap_content" android:text="00:00:00" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/CurrentTime4"  android:textSize="75sp"/>
</LinearLayout>

<!--  Meal Planner Line 4 -->
<LinearLayout android:orientation="vertical" android:id="@+id/Timer4PlannerLine" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:visibility="gone">	
