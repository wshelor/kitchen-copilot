<LinearLayout android:orientation="horizontal"  android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginTop="15dip"	>
	<Button android:text=" Add" android:id="@+id/TimerAddButton"  android:background="@drawable/addbutton" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dip" android:visibility="gone" android:gravity="left"/>
	<Button android:text=" Hide" android:id="@+id/TimerHideButton"  android:background="@drawable/subtractbutton" android:textSize="20sp" android:layout_width="wrap_content"  android:layout_height="wrap_content" android:visibility="gone" android:gravity="left"/>
	</LinearLayout>

<Button android:text="Start Meal Planner" android:id="@+id/MealPrepButton" android:textSize="20sp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="15dip" android:visibility="gone"/> 

</LinearLayout>
