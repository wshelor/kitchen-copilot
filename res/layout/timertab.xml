</LinearLayout>

<!-- Buttons Line 2 -->
<LinearLayout android:orientation="horizontal"  android:layout_width="fill_parent" android:id="@+id/Timer2ButtonLine" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_marginBottom="15dip">
	<Button android:text="   Start   " android:id="@+id/TimerStartButton2"  android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	<Button android:text="   Stop   " android:id="@+id/TimerStopButton2" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="25dip" android:layout_marginLeft="25dip"/>
	<Button android:text="   Reset   " android:id="@+id/TimerResetButton2"  android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content"  android:layout_height="wrap_content"/>
</LinearLayout>

<!--  Meal Planner Line 2 -->
<LinearLayout android:orientation="vertical" android:id="@+id/Timer2PlannerLine" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:visibility="gone">
    <TextView android:layout_height="wrap_content" android:text="Preparation Time                 Cooldown Time" android:textColor="#000000" android:layout_width="wrap_content" android:id="@+id/CurrentTime1"  android:textSize="10sp"/>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:gravity="center_horizontal" android:layout_height="wrap_content">	
		<Button android:text="  00:00:00  " android:id="@+id/Timer2PrepTime" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_marginRight="25dip" android:layout_width="wrap_content" android:layout_height="wrap_content"/> 
		<Button android:text="  00:00:00   " android:id="@+id/Timer2CooldownTime" android:background="@drawable/greenoutline" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
	</LinearLayout>
</LinearLayout>


<TextView android:layout_height="wrap_content" android:text="Dish 3- Click Here To Set Title" android:id="@+id/MP3Title" android:textColor="#000000" android:layout_marginTop="15dip" android:layout_width="fill_parent" android:gravity="center" android:textSize="20sp" android:visibility="gone" android:background="@drawable/yellowtile" android:textStyle="bold" android:layout_marginBottom="5dip"/>

